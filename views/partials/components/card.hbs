<div class="card">
  <a href="#" class="card__link-add btn" data-id="{{id}}"><i
                    class="fa fa-shopping-basket card__link-add-icon"
                  ></i>Agregar</a>
  <article class="card__article">
    <div class="card__image-container">
      <button class="card__favorite" data-id="{{id}}">
        <svg height="24" width="24" version="1.1">
          <g transform="translate(0 -1028.4)">
            <path
              d="m7 1031.4c-1.5355 0-3.0784 0.5-4.25 1.7-2.3431 2.4-2.2788 6.1 0 8.5l9.25 9.8 9.25-9.8c2.279-2.4 2.343-6.1 0-8.5-2.343-2.3-6.157-2.3-8.5 0l-0.75 0.8-0.75-0.8c-1.172-1.2-2.7145-1.7-4.25-1.7z"
              fill="#e74c3c"
            ></path>
          </g>
        </svg>
      </button>
      <a class="card__image-link" href="#/products/{{id}}">
        <img class="card__image" src="{{profileImageUrl}}" alt="{{name}}" >
      </a>
    </div>
    <div class="card__content">
      <h3 class="card__heading">
        {{name}}
      </h3>
      <div class="card__price-container">
        <p class="card__price">{{price}}</p>
      </div>
      <div class="card__description">
        <p class="card__description-short">
          {{shortDescription}}
        </p>
      </div>
    </div>
  </article>
</div>